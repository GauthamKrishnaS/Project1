@model Project1.Models.Course

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>

    div {
        margin-left: auto;
        margin-right: auto;
    }
</style>
<div>
    <h1 style="display:block; text-align:center">Edit</h1>

    <h4 style="display:block; text-align:center">Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="courseID" class="control-label"></label>
                <input asp-for="courseID" class="form-control" />
                <span asp-validation-for="courseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="courseName" class="control-label"></label>
                <input asp-for="courseName" class="form-control" />
                <span asp-validation-for="courseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="courseDuration" class="control-label"></label>
                <input asp-for="courseDuration" class="form-control" />
                <span asp-validation-for="courseDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="courseFee" class="control-label"></label>
                <input asp-for="courseFee" class="form-control" />
                <span asp-validation-for="courseFee" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="status" /> @Html.DisplayNameFor(model => model.status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <h5> <a asp-action="Index" style="display:block; text-align:center">Back to List</a></h5>
    </div>

</div>